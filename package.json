{
  "name": "jotfrom-kiosk",
  "version": "0.0.1",
  "description": "Cross platform desktop app for using JotForm forms in kiosks",
  "main": "app/main/.parcel/main.js",
  "scripts": {
    "start": "run-s main:build electron:watch",
    "test": "run-s parcel:build \"test:jest {@}\" --",
    "lint": "tslint app/**/*.ts{,x}",
    "release": "run-s parcel:build \"electron:build {@}\" --",
    "electron:watch": "run-p -r parcel:watch electron:start",
    "electron:start": "nodemon --watch app/main/.parcel --exec \"electron .\"",
    "electron:build": "electron-builder --x64 --publish=never",
    "parcel:watch": "run-p -r main:watch renderer:watch",
    "main:watch": "parcel watch app/main/main.ts --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:watch": "parcel app/renderer/index.html --port 1124 --out-dir app/renderer/.parcel/development",
    "parcel:build": "run-s main:build renderer:build",
    "main:build": "parcel build app/main/main.ts --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:build": "parcel build app/renderer/index.html --public-url ./ --out-dir app/renderer/.parcel/production",
    "test:jest": "jest"
  },
  "author": "Baykam Say",
  "license": "Apache-2.0",
  "build": {
    "productName": "JotFromKiosk",
    "appId": "com.baykamsay.JotFormKiosk",
    "files": [
      "app/**",
      "!app/main/main.ts",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**",
      "!app/**/*.map"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-mac.${ext}"
    },
    "win": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-win.${ext}"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Development",
      "artifactName": "${productName}-linux.${ext}"
    },
    "directories": {
      "output": "release"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "babel-jest": "^25.4.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.13.1",
    "spectron": "^10.0.1",
    "tslint": "^6.1.1",
    "tslint-react": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.4.4",
    "app-root-path": "^3.0.0",
    "bootstrap": "^4.5.0",
    "electron-is-dev": "^1.2.0",
    "jotform": "^0.1.4",
    "jquery": "^3.5.1"
  },
  "resolutions": {
    "spectron/webdriverio/optimist/minimist": "1.2.5",
    "jotform/request/qs": "6.9.4",
    "jotform/request/hawk": "7.0.10",
    "jotform/request": "2.88.2",
    "jotform/request/http-signature": "1.3.4",
    "jotform/request/form-data/mime": "2.4.6",
    "jotform/request/mime": "2.4.6",
    "jotform/request/hawk/boom/hoek": "6.1.3",
    "jotform/request/hawk/cryptiles/boom/hoek": "6.1.3",
    "jotform/request/hawk/sntp/hoek": "6.1.3",
    "jotform/request/hawk/hoek": "6.1.3",
    "jotform/request/tunnel-agent": "0.6.0",
    "jotform/request/hawk/cryptiles": "4.1.3"
  }
}
